{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "outDir": "./dist",
    "skipLibCheck": true,

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", "rollup.config.ts"],
  "exclude": ["dist", "node_modules", "src/client"]
}
