{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "outDir": "../../dist/client",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules"]
}
